{
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier"],
    "rules":{
        "comma-dangle": ["error", "only-multiline"],
        "no-shadow": "off",
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "avoid",
                "semi": true,
                "trailingComma": "all",
                "endOfLine": "lf",
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120,
                "jsxSingleQuote": false
              }
        ]
    }
}